@using BlazorDataGridExample.Shared.Models;
@using BlazorDataGridExample.Infrastructure;

@using Microsoft.Fast.Components.FluentUI.Utilities;

@inherits FluentComponentBase
<FluentSelect @attributes="AdditionalAttributes" class="@Class" style="@Style"
              Id="@Id"
              Title="@Title"
              Disabled="@Disabled"
              Items="@FilterOperatorOptions"
              TOption="Option<FilterOperatorEnum>"
              OptionText="@(i => Loc.TranslateEnum(i.Text))"
              OptionValue="@(i => i.Value.ToString())"
              OptionDisabled="@(i => i.Disabled)"
              @bind-Value="FilterOperatorValue"
              @bind-SelectedOption="SelectedFilterOperatorOption">
              @ChildContent
</FluentSelect>